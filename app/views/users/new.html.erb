<h2>Sign Up</h2>

<div class="row">
  <div class="col-md-6">
    <div class="panel panel-primary">
      <div class="panel-heading">New User Form</div>
      <div class="panel-body">
        <%= simple_form_for @user, html: { class: 'form-horizontal' }, wrapper: :horizontal_form do |f| %>
          <%= render partial: 'form_sf', locals: {f: f} %>

          <%= f.button :submit , "Create Account", class: 'btn btn-primary pull-right' %>

        <% end %>
      </div>
    </div>
  </div>


</div>
