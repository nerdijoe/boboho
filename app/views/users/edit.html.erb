<h2>Edit Profile</h2>

<div class="row">
  <div class="col-md-6">
    <div class="panel panel-primary">
      <div class="panel-heading">Edit Form</div>
      <div class="panel-body">
        <%= simple_form_for @user, html: { class: 'form-horizontal' }, wrapper: :horizontal_form, wrapper_mappings: {file: :horizontal_file_input} do |f| %>
          <%= render partial: 'form_sf', locals: {f: f} %>

          <%= f.button :submit , "Save changes", class: 'btn btn-primary pull-right' %>

        <% end %>
      </div>
    </div>
  </div>
</div> <!-- end of row-->
