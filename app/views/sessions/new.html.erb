<h2>Login</h2>

<% if logged_in? %>
  <p>
    You have logged in. Please logout if you are not <%= current_user.username %>.
  </p>

<% else %>
  <%= simple_form_for :session, url: sessions_path, html: { class: 'form-horizontal' }, wrapper: :horizontal_form do |f| %>
    <%= render partial: 'form_sf', locals: {f: f} %>
    <%= f.button :submit, 'Sign In', class: 'btn btn-primary pull-right' %>
  <% end %>

<% end %>
