
<%= form_for @search_new, html: {class: 'form-horizontal'} do |form| %>

  <div class="form-group">
    <%= form.label :keyword, 'Keyword', class:'col-sm-2 control-label' %>
    <div class="col-sm-3">
      <%= form.text_field :keyword , class: 'form-control'%>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= form.submit 'Search' %>
    </div>
  </div>

<% end %>
