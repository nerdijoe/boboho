<h1>Static#index</h1>


  <% @categories.each do |cat| %>
    <% if cat.listings.present? %>

      <categories>
        <h3><%= link_to cat.name, category_path(cat.id) %></h3>
      </categories>

      <div class="listings transitions-disabled">

      <% cat.listings.order(created_at: :desc).limit(4).each do |listing| %>

        <div class="box panel panel-default">
          <figure>
            <%= link_to (image_tag listing.photos[0].medium.url), listing if listing.photos.count > 0 %>
          </figure>

          <div class="panel-body">
              <%= truncate(listing.name, length: 33, omission: '...') %>
          </div>
          <div class="panel-footer">
            <%= listing.currency %> <%= listing.price %>
          </div>
        </div>

        <% end %> <!-- end of cat.each -->
      </div>


    <% end %> <!-- end of if -->
  <% end %> <!-- end of categories.each -->
