<h2>Edit Listing</h2>

<div class="row">
  <div class="col-md-6">
    <div class="panel panel-primary">
      <div class="panel-heading">Edit Listing Form</div>
      <div class="panel-body">
        <%= simple_form_for [current_user, @listing], html: { class: 'form-horizontal' }, wrapper: :horizontal_form do |f| %>
          <%= render partial: 'form_sf', locals: {f: f} %>

          <%= f.button :submit , "Save Changes", class: 'btn btn-primary pull-right' %>

        <% end %>
      </div>
    </div>
  </div>
</div> <!-- end of row-->
