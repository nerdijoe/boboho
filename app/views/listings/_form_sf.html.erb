<%= f.error_notification %>
<%= f.input :name, placeholder: 'Item Name' %>

<%= f.input :price, placeholder: 'price' %>

<%= f.input :currency, placeholder: 'Currency' %>

<%= f.input :condition, as: :select, collection: Listing.conditions.map{ |a| [a.first,a.first] } %>

<%= f.input :description, as: :text %>

<%= f.input :delivery, as: :radio_buttons, collection: Listing.deliveries.map{ |a| [a.first,a.first] }, wrapper: :horizontal_radio_and_checkboxes %>

<%= f.input :photos, as: :file, input_html: {multiple: true}, wrapper: :horizontal_file_input %>

<%= f.association :subcategory %>
