
<div class="row" id="listing_show">
  <div class="col-md-6 col-md-offset-3">
    <div class="panel panel-default">

      <div class="panel-body">
        <div class="profile_pic">
          <% if @user.profile_pic.present? %>
            <%= image_tag @user.profile_pic.medium.url, class: "img-circle"%>
          <% end %>
        </div>

        <h4> <%=  @user.firstname %> </h4>
        <p class="description">
          <p class="info"> @<%= @user.username %> </p>
          <p class="info text-muted"> Joined on <%= @user.created_at.strftime("%h %d, %Y") %> </p>
          <p class="info text-muted"> <%= @user.city %>, <%= @user.country %> </p>

        </p>
      </div>

      <div class="panel-footer">
        <div class="row">
          <div class="col-md-12 text-center">
            <div class="btn-group pull-middle">
              <% if logged_in? && is_real_user?(params[:id]) %>

                  <%= link_to 'Edit Profile', edit_user_path(@user.id), class: 'btn btn-default' %>
                  <%= link_to 'Edit Profile Picture', edit_profile_pic_path(@user.id), class: 'btn btn-default' %>
                  <%= link_to 'Delete account', @user, method: :delete, data: {confirm: "Are you sure you want to delete this listing?"}, class: 'btn btn-danger' %>
              <% else %>
                <%= link_to "Chat with Seller", user_chat_path(user_id: params[:id]), class: "btn btn-success"%>
              <% end %>

            </div>
          </div>
        </div>
      </div> <!-- end of footer -->


    </div>
  </div>
</div>
