<nav class="navbar navbar-default">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to "BoBoHo", root_path, class: 'navbar-brand' %>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <li> </li>
      </ul>

      <% @search_new = Search.new %>
      <%= form_for @search_new, html: {class: 'navbar-form navbar-left'} do |form| %>
        <% placeholder = 'Search for an item' %>
        <% placeholder = @search.keyword if @search.present? %>

        <div class="form-group">
            <%= form.text_field :keyword , class: 'form-control', placeholder: placeholder %>
        </div>

        <%= form.submit 'Search' , class: 'btn btn-default'%>

      <% end %>



      <ul class="nav navbar-nav navbar-right">
        <% if logged_in? %>
          <li> <%= link_to 'Your Listings', user_listings_path(current_user) %> </li>
          <li> <%= link_to 'Sell', new_user_listing_path(user_id: current_user.id) %> </li>

          <li> <%= link_to 'Profile', user_path(current_user.id) %> </li>
          <li> <%= link_to 'Logout', logout_path %> </li>
        <% else %>
          <li> <%= link_to 'Sign up', new_user_path %> </li>
          <li> <%= link_to 'Login', login_path %> </li>
          <li> <%= link_to "Sign in with Facebook", "/auth/facebook" %> </li>
        <% end %>
      </ul>


    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>
